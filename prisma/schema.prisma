datasource db {
  // could be postgresql or mysql
  provider = "mysql"
  url      = "file:dev.db"
}

generator db {
  provider = "go run github.com/steebchen/prisma-http-go"
}

// Test Model
model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  published Boolean
  desc      String?
}


model Watchlist {
  id                    Int      @id @default(autoincrement())
  symbol                String   @unique
  lastQueriedPrice      Float? // 마지막 조회 가격
  previousPrice         Float? // 이전 조회 가격
  priceChange           Float? // 가격 변동 금액
  priceChangePercentage Float? // 가격 변동 백분율
  priceTrendCounter     Int      @default(0) // 5분 봉 추세 카운터
  trendHistory          Int[] // 추세 이력 (5분봉 추세 데이터 배열)
  dailyPrice            Float? // 일별 가격
  dailyTrendCounter     Int      @default(0) // 일별 상승 카운트
  weeklyPrice           Float? // 주간가격
  weeklyTrendCounter    Int      @default(0)
  targetPrice           Float? // 목표가격
  limitPrice            Float? // 지지가격
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model FuturePair {
  id            Int      @id @default(autoincrement())
  symbol        String
  lastPrice     Float
  highPrice     Float
  lowPrice      Float
  volume        Float
  unrealizedPnl Float? // 미실현손익
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}